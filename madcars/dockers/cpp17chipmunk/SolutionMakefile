CXXFLAGS=-std=c++17 -O3 -m64 -pipe -w -pthread
CXX=g++-7

SRCS = $(shell find ${SOLUTION_CODE_PATH}/solution -type f -name '*.cpp')
OBJS = $(shell find ${SOLUTION_LIBRARY_PATH} -type f -name '*.o')

all: ${SRCS} ${OBJS}
	${CXX} ${CXXFLAGS} -o ${COMPILED_FILE_PATH} ${SRCS} ${OBJS} -I${SOLUTION_LIBRARY_PATH}/include
