CC    = cc
FLAGS        = -std=gnu99 -ffast-math -DCHIPMUNK_FFI -g -DCP_USE_CGPOINTS=0 -DNDEBUG -fPIC -O3 -m64

SOURCES = $(shell find ${SOLUTION_LIBRARY_PATH}/src -type f -name '*.c')
INCLUDE = ${SOLUTION_LIBRARY_PATH}/include

OBJECTS = $(SOURCES:.c=.o)

all: $(OBJECTS)

$(OBJECTS): %.o: %.c
	$(CC) $(FLAGS) -I$(INCLUDE) -c $< -o $@


